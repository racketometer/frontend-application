{
    "compilerOptions": {
        "outDir": "app",
        "rootDir": "app",
        "module": "commonjs",
        "target": "es5",
        "inlineSourceMap": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "emitDecoratorMetadata": true,
        "noEmitOnError": true,
        "typeRoots": [
            "./node_modules/@types",
            "./types"
        ]
    },
    "files": [
        "./references.d.ts",
        "./app/main.ts"
    ],
    "exclude": [
        "node_modules",
        "platforms"
    ]
}