{
    "compilerOptions": {
        "outDir": "app",
        "rootDir": "app",
        "module": "commonjs",
        "target": "es5",
        "inlineSourceMap": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "emitDecoratorMetadata": true,
        "noEmitOnError": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "types": [
            "../references"
        ]
    },
    "files": [
        "./app/main.ts",
        "./app/tests/index.ts"
    ],
    "exclude": [
        "node_modules",
        "platforms"
    ]
}